@page
@model ConfigurationManager.WebApp.Pages.Accounts.Login
@{
    ViewData["Title"] = "Login";
}


<div class="card py-xl-3 px-xl-5 w-25" style="margin: 5% 35%;">
    <h2>Вход на сайт</h2>
    <form method="post" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="form-group">
                <label>Логин: </label><br />
                <input class="form-control" type="text" asp-for="LoginViewModel.Login" />
                <span asp-validation-for="LoginViewModel.Login" />
            </div>
            <div class="form-group">
                <label>Пароль:</label><br />
                <input class="form-control" type="password" asp-for="LoginViewModel.Password" />
                <span asp-validation-for="LoginViewModel.Password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>